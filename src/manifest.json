{
  "manifest_version": 2,
  "name": "Zoom Web Client Redirector",
  "version": "2.5.2",
  "description": "Redirect Zoom meetings to the web client version.",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png",
    "256": "icons/256x256.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://*.zoom.us/*",
    "*://*.zoomgov.us/*",
    "*://*.zoom.com/*",
    "*://*.zoomgov.com/*"
  ],
  "background": {
    "page": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.zoom.us/*",
        "*://*.zoom.com/*",
        "*://*.zoomgov.us/*",
        "*://*.zoomgov.com/*"
      ],
      "js": [
        "js/background.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "64": "icons/64x64.png",
      "128": "icons/128x128.png",
      "256": "icons/256x256.png"
    },
    "default_title": "Zoom Web Client Redirector",
    "default_popup": "html/popup.html"
  }
}
